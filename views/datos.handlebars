<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <form id="updateForm">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input
        id="emailPerfil"
          class="form-control m-auto"
          disabled
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input id="nombrePerfil" class="form-control m-auto"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input id="passwordPerfil" type="password" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input id="passRepeatPerfil" type="password" class="form-control m-auto" value="12345678" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input id="aniosPerfil" class="form-control m-auto"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input id="especialidadPerfil" class="form-control m-auto"/>
      </div>
    </div>
    <div class="mb-1">
      <button  id="btnSubmitPerfil" class="btn btn-primary">Actualizar</button>
    </div>
        <div class="mt-5">
      <button id="btnEliminarPerfil" class="btn btn-danger">Eliminar cuenta</button>
    </div>
    <div>
    </div>
  </form>

  {{> modal title="Confirmar Eliminación" body="¿Estás seguro de que deseas eliminar tu cuenta? No podrás deshacer esta acción." btnAccion="Eliminar"}}
  {{> toast}}

</div>