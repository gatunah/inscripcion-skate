<div class="container text-center my-5">
  <h1 class="display-6 font-weight-bold text-uppercase title-shadow">Lista de participantes</h1>
  <div class="py-4">
    <hr class="w-60" />

    <div >
      <table class="table table-dark text-center">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody>
          {{#each result}}
          <tr>
            
            <th scope="row">{{@index}}</th>
            <td><img id="fotoSkater" src="{{foto}}" alt="Foto de perfil"></td>
            <td>{{nombre}}</td>
            <td>{{anos_experiencia}}</td>
            <td>{{especialidad}}</td>
            <td class="{{#if estado}}text-success{{else}}text-warning{{/if}} font-weight-bold">
        {{#if estado}}
          Aprobado
        {{else}}
          En revisión
        {{/if}}
      </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="/login">Iniciar Sesión</a> |
      <a href="/register">Registrarme</a> <br>
    </div>
  </div>
</div>
