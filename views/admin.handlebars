
<div class="container text-center my-5">
  <h1 class="display-6 font-weight-bold text-uppercase title-shadow">Administración</h1>
  <div class="py-4">
    <hr class="w-60" />

    <div >
      <table class="table table-dark text-center">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody>
          {{#each result}}
          <tr>
            
            <th scope="row">{{@index}}</th>
            <td><img id="fotoSkater" src="{{foto}}" alt="Foto de perfil"></td>
            <td>{{capitalize nombre}}</td>
            <td>{{anos_experiencia}}</td>
            <td>{{capitalize especialidad}}</td>
            <td>
              <input type="checkbox" class="estado-checkbox" id="{{id}}" value="{{id}}" {{#if estado}}checked{{/if}}>
            </td>
            {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
