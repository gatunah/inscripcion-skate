<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />

  <form id="registerForm" method="POST" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" name="email" id="email"  />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" name="nombre" id="nombre"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" class="form-control m-auto" name="password" id="password" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" class="form-control m-auto" name="repeat_password" id="repeat_password" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input class="form-control m-auto" name="anos_experiencia"  id="anos_experiencia"/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" name="especialidad" id="especialidad"  />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input type="file" name="foto" id="foto" />
      </div>
    </div>
    <button type="submit" class="btn btn-info mb-3" id="btnSubmitRegist">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
  {{> toast}}
</div>
